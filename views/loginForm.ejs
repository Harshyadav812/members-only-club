<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login to FightClub</title>
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/signup.css" />
  </head>
  <body>
    <%- include('partials/navbar') %>

    <main class="container">
      <div class="signup-container">
        <div class="card">
          <h1>Welcome Back</h1>
          <p class="subtitle">Login to access your FightClub membership</p>

          <% if (errors && errors.length > 0) { %>
          <div class="error-messages">
            <% if (Array.isArray(errors)) { %> <% errors.forEach(error => { %>
            <p class="error-message">
              <%= typeof error === 'object' ? error.msg : error %>
            </p>
            <% }) %> <% } else { %>
            <p class="error-message"><%= errors %></p>
            <% } %>
          </div>
          <% } %>

          <form action="/login" method="post" class="form">
            <div class="form-group">
              <label for="username">Username</label>
              <input
                type="email"
                id="username"
                name="username"
                value="<%= data && data.username || '' %>"
                placeholder="Enter your email"
                required
              />
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                placeholder="Enter your password"
                required
              />
            </div>

            <button type="submit" class="signup-button">Sign In</button>
          </form>

          <div class="login-link">
            Not a member yet? <a href="/signup">Create an account</a>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
